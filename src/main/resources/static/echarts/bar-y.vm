{
    title: {
        text: '$title',
        left: 'center'
    },
    tooltip: {
        trigger: 'axis',
        axisPointer: {
            type: 'shadow'
        }
    },
    legend: {
        data: $legendData
    },
    grid: {
        left: '3%',
        right: '4%',
        bottom: '3%',
        containLabel: true
    },
    xAxis: {
        type: 'value',
        boundaryGap: [0, 0.01],
        axisLabel :{
            formatter: '{value}$unit'
        }
    },
    yAxis: {
        type: 'category',
        data: $axisData
    },
    series: $seriesData
}